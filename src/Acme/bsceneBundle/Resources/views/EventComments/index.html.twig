{% extends '::base.html.twig' %}

{% block body -%}
    <h1>EventComments list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Commenttime</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('eventComments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.comment }}</td>
                <td>{% if entity.commentTime %}{{ entity.commentTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('eventComments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('eventComments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('eventComments_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
