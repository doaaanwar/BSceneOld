{% extends 'adminLayout.html.twig' %}
{% block body %}
               
             <!-- Page Heading -->
               <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Dashboard <small>Statistics Overview</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> New Comment List
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                <div class="row">
       
                    <div class="col-lg-6">
                        <h2>New Comment list</h2>
                        <div class="table-responsive">
                            {% if commentList != NULL %}
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Comment</th>
                                        <th>Event</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                        {% for item in orgList %}

                                           <tr>
                                               <td>{{item.comment}}</td>
                                               <td>{{item.event.title}}</td>

                                           </tr>


                                        {%endfor%}
                                   
                                   
                                    
                                </tbody>
                            </table>
                            {%else%}
                                        {{errormessage}}
                            {%endif%}
                        </div>
                    </div>
                </div>
                <!-- /.row -->
 {% endblock %}