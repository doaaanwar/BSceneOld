{% extends '::base.html.twig' %}

{% block stylesheets %}	
    <link href="{{ asset('bundles/acmebscene/css/account.css')}}" rel="stylesheet">
{% endblock %}
{% block nav %}
{% endblock %}

{% block header %}
{% endblock %}
    
{% block body %}
    <h1>Account list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Backupemail</th>
                <th>Businessphone</th>
                <th>Url</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Province</th>
                <th>Paymentamount</th>
                <th>Membersince</th>
                <th>Isadmin</th>
                <th>Lastlogin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('account_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.backupEmail }}</td>
                <td>{{ entity.businessPhone }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.address1 }}</td>
                <td>{{ entity.address2 }}</td>
                <td>{{ entity.province }}</td>
                <td>{{ entity.paymentAmount }}</td>
                <td>{% if entity.memberSince %}{{ entity.memberSince|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isAdmin }}</td>
                <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('account_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('account_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('account_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
